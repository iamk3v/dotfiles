# Aliases

alias pwsh='/usr/local/microsoft/powershell/7/pwsh'
#alias fvim='nvim $(fzf-tmux -p)'
alias tls='tmux ls'
alias fvim="rg --files --hidden | fzf --border-label='[ File search ]' --preview 'bat --style=numbers --color=always --line-range :100 {}' | xargs nvim "


# Navigation
alias dotfiles='cd ~/git/dotfiles'
alias ..='cd ..'
alias .3='cd ../..'
alias .4='cd ../../..'
alias .5='cd ../../../..'
alias ~='cd'

#Copy config
alias cpconf='cp -r ~/.tmux.conf ~/.zshrc ~/.zsh_aliases ~/.vimrc ~/git/dotfiles'

# Easy report
alias cp='cp -iv'
alias mv='mv -iv'
alias mkdir='mkdir -v'
alias rm='rm -i'
alias rmf='rm -rf'

# Typos
alias :q='exit'
alias help='man'
alias quit='exit'
alias c='clear'
